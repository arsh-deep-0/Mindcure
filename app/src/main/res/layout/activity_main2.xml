<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"

    android:background="#FFCCC9"
    android:padding="10dp">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="350dp"

        android:layout_weight="0"
        app:lottie_autoPlay="true"
        app:lottie_fileName="50124-user-profile.json"
        app:lottie_loop="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"

        android:layout_weight="0"
        app:lottie_autoPlay="true"
        app:lottie_fileName="21458-google-logo.json" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"

        android:layout_marginBottom="0dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="6784-snake-lines.json"
        app:lottie_loop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="350dp"
        android:layout_marginBottom="190dp"
        android:fontFamily="@font/hello"
        android:text="Sign up"
        android:textColor="@color/black"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="450dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:padding="5dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="500dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="450dp"
        android:fontFamily="@font/hello"
        android:text="E-mail address"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="400dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/hello"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="90dp"
            android:layout_height="47dp"
            android:layout_marginVertical="8dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/hello"
            android:text="login"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/btnSkip"
            android:layout_width="90dp"
            android:layout_height="47dp"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="0dp"

            android:backgroundTint="@color/white"
            android:fontFamily="@font/hello"
            android:text="Skip"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="50dp" />

        >
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="550dp"

        android:backgroundTint="#FF92A5"
        android:fontFamily="@font/hello"
        android:text="Register"

        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="25sp"

        app:cornerRadius="100dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/hello"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="25sp" />




</RelativeLayout>