<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7"
    android:padding="10dp">



    <Button
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:textAllCaps="false"
        android:text="*How much hours you slept last night?"
        android:fontFamily="@font/hi"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        app:cornerRadius="20dp"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/hi"
        android:text="Less than six "
        android:textAllCaps="false"
        android:textSize="25sp"
        app:cornerRadius="20dp" />

    <Button
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/hi"
        android:text=" Six to seven "
        android:textAllCaps="false"
        android:textSize="25sp"
        app:cornerRadius="20dp" />

    <Button
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/hi"
        android:text="Seven to eight"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:cornerRadius="20dp" />

    <Button
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:fontFamily="@font/hi"
        android:text="Eigth plus "
        android:textAllCaps="false"
        android:textSize="25sp"
        app:cornerRadius="20dp"/>










</RelativeLayout>